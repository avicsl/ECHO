<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Background Image - FULL SCREEN -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_main"
        android:scaleType="centerCrop"
        android:contentDescription="Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gradient Overlay -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings Icon - Top Left -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="@dimen/settings_icon_size"
        android:layout_height="@dimen/settings_icon_size"
        android:layout_margin="@dimen/settings_icon_margin"
        android:background="@drawable/icon_bg"
        android:clickable="true"
        android:contentDescription="Settings"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="@dimen/settings_icon_padding"
        android:src="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <!-- Coins Display - Top Right -->
    <LinearLayout
        android:id="@+id/coinsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/coins_margin"
        android:background="@drawable/coin_display_bg"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/coins_padding_horizontal"
        android:paddingVertical="@dimen/coins_padding_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="150"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/coins_text_size"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/coins_icon_size"
            android:layout_height="@dimen/coins_icon_size"
            android:layout_marginStart="6dp"
            android:contentDescription="Coins"
            android:src="@drawable/ic_coin" />

    </LinearLayout>

    <!-- App Title - Responsive -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_title_margin_top"
        android:text="ECHO"
        android:textSize="@dimen/app_title_max_size"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:fontFamily="@font/nunito_extrabold"
        android:shadowColor="#DD000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="12"
        android:elevation="8dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="@dimen/app_title_min_size"
        app:autoSizeMaxTextSize="@dimen/app_title_max_size"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintTop_toBottomOf="@id/settingsIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pet Image - Adaptive with proper constraints -->
    <ImageView
        android:id="@+id/mainPetImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="Your Pet"
        android:elevation="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintWidth_max="500dp"
        app:layout_constraintWidth_percent="@dimen/pet_image_width_percent"
        app:layout_constraintDimensionRatio="H,422:398"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Mood Feedback Message (shown after completing quests) -->
    <TextView
        android:id="@+id/moodInfoMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/mood_info_margin_horizontal"
        android:layout_marginTop="@dimen/mood_prompt_margin_top"
        android:elevation="8dp"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:text="You completed all your tasks. How do you feel now?"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/mood_prompt_text_size"
        android:textAlignment="center"
        android:visibility="gone"
        android:maxLines="2"
        android:lineSpacingExtra="2dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeMaxTextSize="@dimen/mood_prompt_text_size"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintTop_toBottomOf="@id/mainPetImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mood Prompt - Below pet (shown by default) -->
    <TextView
        android:id="@+id/moodPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mood_prompt_margin_top"
        android:elevation="8dp"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:text="Mirror your mood!"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/mood_prompt_text_size"
        app:autoSizeMaxTextSize="@dimen/mood_prompt_text_size"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainPetImage" />

    <!-- Barrier to handle whichever message is visible -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/messageBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="moodInfoMessage,moodPrompt" />

    <!-- Likert Scale Emoji Container - Properly Centered -->
    <LinearLayout
        android:id="@+id/emojiContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/emoji_container_margin_top"
        android:background="@drawable/emoji_container_bg"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/emoji_container_padding_horizontal"
        android:paddingVertical="@dimen/emoji_container_padding_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messageBarrier">

        <!-- Neutral -->
        <ImageView
            android:id="@+id/emoji1"
            android:layout_width="@dimen/emoji_size"
            android:layout_height="@dimen/emoji_size"
            android:layout_marginHorizontal="@dimen/emoji_margin_horizontal"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Neutral"
            android:focusable="true"
            android:src="@drawable/emoji_neutral_b" />

        <!-- Happy -->
        <ImageView
            android:id="@+id/emoji2"
            android:layout_width="@dimen/emoji_size"
            android:layout_height="@dimen/emoji_size"
            android:layout_marginHorizontal="@dimen/emoji_margin_horizontal"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Happy"
            android:focusable="true"
            android:src="@drawable/emoji_happy_b" />

        <!-- Sad -->
        <ImageView
            android:id="@+id/emoji3"
            android:layout_width="@dimen/emoji_size"
            android:layout_height="@dimen/emoji_size"
            android:layout_marginHorizontal="@dimen/emoji_margin_horizontal"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Sad"
            android:focusable="true"
            android:src="@drawable/emoji_sad_b" />

        <!-- Angry -->
        <ImageView
            android:id="@+id/emoji4"
            android:layout_width="@dimen/emoji_size"
            android:layout_height="@dimen/emoji_size"
            android:layout_marginHorizontal="@dimen/emoji_margin_horizontal"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Angry"
            android:focusable="true"
            android:src="@drawable/emoji_angry_b" />

        <!-- Anxious -->
        <ImageView
            android:id="@+id/emoji5"
            android:layout_width="@dimen/emoji_size"
            android:layout_height="@dimen/emoji_size"
            android:layout_marginHorizontal="@dimen/emoji_margin_horizontal"
            android:background="@drawable/emoji_selector"
            android:clickable="true"
            android:contentDescription="Anxious"
            android:focusable="true"
            android:src="@drawable/emoji_anxious_b" />

    </LinearLayout>

    <!-- Submit Button - Smaller and Responsive -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/submit_margin_top"
        android:background="@drawable/glass_button_selector"
        android:fontFamily="@font/nunito_bold"
        android:foreground="@drawable/button_click_effect"
        android:minWidth="@dimen/submit_min_width"
        android:minHeight="@dimen/submit_min_height"
        android:paddingHorizontal="@dimen/submit_padding_horizontal"
        android:paddingVertical="@dimen/submit_padding_vertical"
        android:shadowColor="#CC000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:stateListAnimator="@null"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/submit_text_size"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="@dimen/submit_corner_radius"
        app:elevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emojiContainer"
        app:layout_constraintVertical_bias="0.2"
        app:strokeColor="#EEFFFFFF"
        app:strokeWidth="2dp" />

    <!-- Bottom Navigation - Always at bottom -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="@dimen/nav_padding_vertical"
        android:background="@drawable/nav_background"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="@dimen/nav_icon_height"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/navQuests"
            android:layout_width="0dp"
            android:layout_height="@dimen/nav_icon_height"
            android:layout_weight="1"
            android:src="@drawable/ic_quests"
            android:contentDescription="Statistics"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

        <ImageView
            android:id="@+id/navCustomize"
            android:layout_width="0dp"
            android:layout_height="@dimen/nav_icon_height"
            android:layout_weight="1"
            android:src="@drawable/ic_customize"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true"
            app:tint="#B3FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>